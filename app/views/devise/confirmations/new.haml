%h2.h2 t('devise.confirmations.resend_password_reset')
.row
  .col-md-12
    = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form', class: 'form-horizontal' }) do |f|
      .form-group
        .alert.alert-info
          = devise_error_messages!
      .form-group
        = f.label :email, class: 'control-label col-md-2'
        .col-md-10
          = f.email_field :email, autofocus: true, class: 'form-control'
      .form-group
        = f.submit t('devise.confirmations.resend_password_reset'), 
.row
  .col-md-12
    = render "devise/shared/links"
