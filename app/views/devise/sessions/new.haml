.row{ style: 'padding-top: 4em; '}
  .col-md-10
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'form-horizontal'}) do |f|
      .form-group
        = f.label :email, 'Электропочта', class: 'col-md-3 control-label'
        .col-md-9= f.email_field :email, autofocus: true, class: 'form-control'
      .form-group
        = f.label :password, 'Пароль', class: 'col-md-3 control-label'
        .col-md-9= f.password_field :password, autocomplete: "off", class: 'form-control'
      - if devise_mapping.rememberable?
        .form-group
          .col-md-offset-3.col-md-9
            = f.check_box :remember_me
            = f.label :remember_me, 'Запомнить меня'
      .form-group
        .col-md-offset-3.col-md-9= f.submit "Зайти", class: 'btn btn-default btn-success'
    .row
      .col-md-offset-3.col-md-9
        = render "devise/shared/links"
