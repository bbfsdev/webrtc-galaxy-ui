.btn-group
  - if controller_name != 'sessions'
    = link_to "Зайти", new_session_path(resource_name), class: 'btn-success btn'

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Записаться", new_registration_path(resource_name), class: 'btn-info btn'

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to "Забыл пароль?", new_password_path(resource_name), class: 'btn-warning btn'

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to "Нет подтверждения?", new_confirmation_path(resource_name), class: 'btn-info btn'

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to "Разблокировать?", new_unlock_path(resource_name), class: 'btn-danger btn'

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Зайти с помощью: #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'btn-info btn'

