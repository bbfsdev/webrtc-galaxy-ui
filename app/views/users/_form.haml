= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :addr_id
    %br/
    = f.text_field :addr_id
  .field
    = f.label :role_id
    %br/
    = f.text_field :role_id
  .actions
    = f.submit
